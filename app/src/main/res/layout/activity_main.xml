<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="413dp"
        android:layout_height="655dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/speed"
            android:layout_width="162dp"
            android:layout_height="31dp"
            android:layout_marginTop="16dp"
            android:text="speed"
            android:textColor="#FFFEFE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.633"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/tmpmax"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="79dp"
            android:layout_height="26dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:text="Speed : "
            android:textColor="#FFFEFE"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.137" />

        <TextView
            android:id="@+id/tmpmax"
            android:layout_width="162dp"
            android:layout_height="31dp"
            android:layout_marginBottom="132dp"
            android:text="tmpmax"
            android:textColor="#FFFEFE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.633"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tempmin"
            app:layout_constraintVertical_bias="0.489" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="376dp"
            android:layout_height="265dp"
            android:background="#6B0C0C0C"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ville"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:text="City"

                    android:textColor="#FFFEFE" />

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:text="Date"

                    android:textColor="#FFFEFE" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/temp"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:text="Temperature"
            android:textColor="#FFFEFE"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.827"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.092" />

        <TextView
            android:id="@+id/tempmin"
            android:layout_width="162dp"
            android:layout_height="31dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="92dp"
            android:text="tempmin"
            android:textColor="#FFFEFE"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temp"
            app:layout_constraintVertical_bias="0.053" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="152dp"
            android:text="T° MAX"
            android:textColor="#FFFEFE"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:text="T° : MIN :"
            android:textColor="#FFFEFE"
            android:textSize="20sp"

            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/tempmin"
            app:layout_constraintHorizontal_bias="0.283"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temp"
            app:layout_constraintVertical_bias="0.546" />

        <Button
            android:id="@+id/btnMaps"
            android:layout_width="173dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:text="check maps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>